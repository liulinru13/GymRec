<?xml version="1.0" encoding="utf-8"?>
<com.mmrx.gymrec.ui.view.PageTrainSubject
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/view_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/PagePadding"
        android:layout_marginTop="@dimen/global_16dp"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/PageTrainSubjectText"
            android:text="@string/train_subj_name"/>

        <TextView
            android:id="@+id/trainSubjectName"
            style="@style/PageTrainSubjectContentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@string/train_subj_name_hint"
            app:layout_constraintBottom_toBottomOf="@+id/tv1"
            app:layout_constraintStart_toEndOf="@+id/tv1"
            app:layout_constraintTop_toTopOf="@+id/tv1" />

        <ImageView
            android:id="@+id/trainSubjectNameIcon"
            android:layout_width="@dimen/global_12dp"
            android:layout_height="@dimen/global_12dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="@dimen/global_5dp"
            android:layout_marginRight="@dimen/global_5dp"
            android:src="@drawable/ic_mode_edit_black_18dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv1"
            app:layout_constraintStart_toEndOf="@+id/trainSubjectName"
            app:layout_constraintTop_toTopOf="@+id/tv1" />

    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/train_subject_add_new_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/train_subj_add_new_item"
        android:background="@drawable/round_rect_red_white_bn_bg"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/global_6dp"
        android:layout_alignParentBottom="true"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/train_subject_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/view_top"
        android:layout_alignTop="@id/train_subject_add_new_item"/>

</com.mmrx.gymrec.ui.view.PageTrainSubject>