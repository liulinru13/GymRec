<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipeView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--隐藏view-->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/first_page_list_item_h"
        android:orientation="horizontal"
        android:background="@color/red">
        <ImageView
            android:id="@+id/swipeViewDeleteBn"
            android:layout_width="@dimen/icon_small_wh"
            android:layout_height="@dimen/icon_small_wh"
            android:layout_margin="@dimen/icon_small_margin"
            android:src="@drawable/ic_delete_sweep_white_24dp"/>
    </FrameLayout>

    <!--内容展示-->
    <include
        android:id="@+id/item"
        layout="@layout/view_first_page_list_item"/>

</com.daimajia.swipe.SwipeLayout>