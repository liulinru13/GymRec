<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PageMargin_TB">
        <item name="android:layout_marginTop">@dimen/global_6dp</item>
        <item name="android:layout_marginBottom">@dimen/global_6dp</item>
    </style>
    <style name="PagePadding">
        <item name="android:padding">@dimen/global_8dp</item>
    </style>

    <style name="PageTrainSubjectText" parent="PageMargin_TB">
        <item name="android:textSize">@dimen/text_size_normal_18</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginRight">@dimen/global_5dp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="PageTrainSubjectContentText" parent="PageMargin_TB">
        <item name="android:textSize">@dimen/text_size_normal_14</item>
        <item name="android:layout_marginRight">@dimen/global_5dp</item>
        <item name="android:layout_marginLeft">@dimen/global_5dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

</resources>
